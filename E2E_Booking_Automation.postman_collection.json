  "item": [
    {
      "name": "01_Login",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = pm.response.json();\r",
              "pm.environment.set(\"token\", jsonData.token); // Token'ı otomatik kaydettik"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\r\n    \"username\" : \"admin\",\r\n    \"password\" : \"password123\"\r\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{url}}/auth",
          "host": [
            "{{url}}"
          ],
          "path": [
            "auth"
          ]
        }
      },
      "response": []
    },
    {
      "name": "02_Create_Booking",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = pm.response.json();\r",
              "pm.environment.set(\"booking_id\", jsonData.bookingid);"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\r\n    \"firstname\" : \"Ahmet\",\r\n    \"lastname\" : \"Test\",\r\n    \"totalprice\" : 150,\r\n    \"depositpaid\" : true,\r\n    \"bookingdates\" : {\r\n        \"checkin\" : \"2026-01-01\",\r\n        \"checkout\" : \"2026-01-02\"\r\n    },\r\n    \"additionalneeds\" : \"Breakfast\"\r\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{url}}/booking",
          "host": [
            "{{url}}"
          ],
          "path": [
            "booking"
          ]
        }
      },
      "response": []
    },
    {
      "name": "03_Get_Booking",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"İsim doğru mu?\", function () {\r",
              "    var jsonData = pm.response.json();\r",
              "    pm.expect(jsonData.firstname).to.eql(\"Ahmet\");\r",
              "});"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{url}}/booking/{{booking_id}}",
          "host": [
            "{{url}}"
          ],
          "path": [
            "booking",
            "{{booking_id}}"
          ]
        }
      },
      "response": []
    },
    {
      "name": "04_Delete_Booking",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Başarıyla silindi\", function () {\r",
              "    // Bu API özelinde silme işlemi sonrası 201 Created döner\r",
              "    pm.response.to.have.status(201); \r",
              "});"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
      ],
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Cookie",
            "value": "token={{token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{url}}/booking/{{booking_id}}",
          "host": [
            "{{url}}"
          ],
          "path": [
            "booking",
            "{{booking_id}}"
          ]
        }
      },
      "response": []
    }
  ]
